{
  "name": "vue-dummy-mono-repo",
  "version": "1.0.0",
  "description": "Sample MonoRepo for Dummy Published Vue Components",
  "main": "index.js",
  "author": "matt@brophy.org",
  "license": "MIT",
  "repository": {
    "type": "git",
